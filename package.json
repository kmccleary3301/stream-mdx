{
  "name": "stream-mdx-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build:packages && npm -w streaming-markdown-starter run build",
    "build:packages": "npm -w @stream-mdx/core run build && npm -w @stream-mdx/plugins run build && npm -w @stream-mdx/worker run build && npm -w @stream-mdx/react run build && npm -w @stream-mdx/mermaid run build && npm -w stream-mdx run build",
    "ci:pack-smoke": "tsx scripts/ci-pack-smoke.ts",
    "test": "npm --workspaces --if-present run test",
    "clean": "npm --workspaces --if-present run clean",
    "markdown-v2:build:packages": "npm run build:packages",
    "markdown-v2:test:packages": "npm --workspaces --if-present run test",
    "worker:build": "npm -w @stream-mdx/worker run build:hosted && tsx scripts/copy-hosted-worker.ts",
    "docs:worker:build": "npm -w @stream-mdx/worker run build:hosted && tsx scripts/copy-hosted-worker.ts --to apps/docs/public/workers/markdown-worker.js",
    "docs:dev": "npm run docs:worker:build && npm -w stream-mdx-docs run dev",
    "docs:build": "npm run docs:worker:build && npm -w stream-mdx-docs run build",
    "docs:start": "npm -w stream-mdx-docs run start",
    "docs:css:snapshot": "tsx scripts/css-snapshot-docs.ts",
    "perf:demo": "tsx scripts/perf/run-demo-perf.ts",
    "perf:compare": "tsx scripts/perf/compare-perf-harness.ts",
    "perf:gate": "tsx scripts/perf/gate-perf-harness.ts",
    "perf:harness": "tsx scripts/perf/run-perf-harness.ts",
    "perf:sync-fixtures": "tsx scripts/perf/sync-perf-fixtures.ts",
    "test:regression:html": "tsx scripts/regression/run-html-snapshots.ts",
    "test:regression:html:update": "UPDATE_SNAPSHOTS=1 tsx scripts/regression/run-html-snapshots.ts",
    "test:regression:styles": "tsx scripts/regression/run-style-snapshots.ts",
    "test:regression:styles:update": "UPDATE_SNAPSHOTS=1 tsx scripts/regression/run-style-snapshots.ts",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "@changesets/cli": "^2.28.1",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
