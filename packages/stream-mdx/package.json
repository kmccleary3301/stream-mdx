{
  "name": "stream-mdx",
  "version": "0.0.0",
  "description": "StreamMDX convenience package (re-exports @stream-mdx/*).",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kmccleary3301/stream-mdx.git",
    "directory": "packages/stream-mdx"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.mjs",
      "require": "./dist/core.cjs"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.mjs",
      "require": "./dist/react.cjs"
    },
    "./worker": {
      "types": "./dist/worker.d.ts",
      "import": "./dist/worker.mjs",
      "require": "./dist/worker.cjs"
    },
    "./plugins": {
      "types": "./dist/plugins.d.ts",
      "import": "./dist/plugins.mjs",
      "require": "./dist/plugins.cjs"
    }
  },
  "files": ["dist"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "prepack": "npm run build"
  },
  "dependencies": {
    "@stream-mdx/core": "0.0.0",
    "@stream-mdx/plugins": "0.0.0",
    "@stream-mdx/react": "0.0.0",
    "@stream-mdx/worker": "0.0.0"
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0"
  }
}

