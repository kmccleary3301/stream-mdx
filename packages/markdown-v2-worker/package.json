{
  "name": "@stream-mdx/worker",
  "version": "0.0.1",
  "description": "Worker client utilities and shared worker helpers for the Streaming Markdown V2 pipeline",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kmccleary3301/stream-mdx.git",
    "directory": "packages/markdown-v2-worker"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./worker-client": {
      "types": "./dist/worker-client.d.ts",
      "import": "./dist/worker-client.mjs",
      "require": "./dist/worker-client.cjs"
    },
    "./streaming/custom-matcher": {
      "types": "./dist/streaming/custom-matcher.d.ts",
      "import": "./dist/streaming/custom-matcher.mjs",
      "require": "./dist/streaming/custom-matcher.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "src/worker-dom-stub.ts"
  ],
  "scripts": {
    "build": "tsup",
    "build:hosted": "tsup --config tsup.hosted-worker.config.ts",
    "test": "tsx __tests__/*.test.ts",
    "clean": "rm -rf dist",
    "prepack": "npm run build && npm run build:hosted"
  },
  "dependencies": {
    "@lezer/common": "^1.2.3",
    "@lezer/lr": "^1.4.2",
    "@lezer/markdown": "^1.3.0",
    "@stream-mdx/core": "0.0.1",
    "@stream-mdx/plugins": "0.0.1",
    "@mdx-js/mdx": "^3.1.0",
    "@shikijs/engine-javascript": "^1.29.2",
    "@shikijs/engine-oniguruma": "^1.29.2",
    "character-entities": "^2.0.2",
    "rehype-katex": "^7.0.1",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "shiki": "^1.29.2"
  }
}
