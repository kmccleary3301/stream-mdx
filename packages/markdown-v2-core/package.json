{
  "name": "@stream-mdx/core",
  "version": "0.1.1",
  "description": "Core types, snapshot utilities, and perf helpers for the Streaming Markdown V2 stack",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kmccleary3301/stream-mdx.git",
    "directory": "packages/markdown-v2-core"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.mjs",
      "require": "./dist/types.cjs"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.mjs",
      "require": "./dist/utils.cjs"
    },
    "./code-highlighting": {
      "types": "./dist/code-highlighting.d.ts",
      "import": "./dist/code-highlighting.mjs",
      "require": "./dist/code-highlighting.cjs"
    },
    "./inline-parser": {
      "types": "./dist/inline-parser.d.ts",
      "import": "./dist/inline-parser.mjs",
      "require": "./dist/inline-parser.cjs"
    },
    "./mixed-content": {
      "types": "./dist/mixed-content.d.ts",
      "import": "./dist/mixed-content.mjs",
      "require": "./dist/mixed-content.cjs"
    },
    "./worker-html-sanitizer": {
      "types": "./dist/worker-html-sanitizer.d.ts",
      "import": "./dist/worker-html-sanitizer.mjs",
      "require": "./dist/worker-html-sanitizer.cjs"
    },
    "./perf/backpressure": {
      "types": "./dist/perf/backpressure.d.ts",
      "import": "./dist/perf/backpressure.mjs",
      "require": "./dist/perf/backpressure.cjs"
    },
    "./perf/patch-batching": {
      "types": "./dist/perf/patch-batching.d.ts",
      "import": "./dist/perf/patch-batching.mjs",
      "require": "./dist/perf/patch-batching.cjs"
    },
    "./perf/patch-coalescing": {
      "types": "./dist/perf/patch-coalescing.d.ts",
      "import": "./dist/perf/patch-coalescing.mjs",
      "require": "./dist/perf/patch-coalescing.cjs"
    },
    "./security": {
      "types": "./dist/security.d.ts",
      "import": "./dist/security.mjs",
      "require": "./dist/security.cjs"
    },
    "./streaming/custom-matcher": {
      "types": "./dist/streaming/custom-matcher.d.ts",
      "import": "./dist/streaming/custom-matcher.mjs",
      "require": "./dist/streaming/custom-matcher.cjs"
    },
    "./streaming/inline-streaming": {
      "types": "./dist/streaming/inline-streaming.d.ts",
      "import": "./dist/streaming/inline-streaming.mjs",
      "require": "./dist/streaming/inline-streaming.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "test": "tsx ../../scripts/run-tests.ts __tests__",
    "clean": "rm -rf dist",
    "prepack": "npm run build"
  },
  "dependencies": {
    "@lezer/common": "^1.2.3",
    "@lezer/markdown": "^1.3.0",
    "dompurify": "^3.1.6",
    "rehype-parse": "^9.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "unified": "^11.0.5"
  }
}
